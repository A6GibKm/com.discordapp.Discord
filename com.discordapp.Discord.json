{
  "app-id": "com.discordapp.Discord",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "discord",
  "separate-locales": false,
  "tags": ["proprietary"],
  "finish-args": [
      "--share=ipc", "--socket=x11",
      "--socket=pulseaudio",
      "--share=network",
      "--device=dri",
      "--talk-name=org.freedesktop.Notifications",
      "--filesystem=xdg-videos:ro",
      "--filesystem=xdg-pictures:ro",
      "--env=XDG_CURRENT_DESKTOP=Unity",
      "--talk-name=org.kde.StatusNotifierWatcher",
      "--extra-data=discord.tar.gz:dfc17ac6f683a45f896a4f881b900b2d46d74b0625cb661db1bfe39b33a06769:62357916::https://dl.discordapp.net/apps/linux/0.0.2/discord-0.0.2.tar.gz"
  ],
  "modules": [
    {
      "name": "discord",
      "buildsystem": "simple",
      "build-commands": [
        "install -D apply_extra /app/bin/apply_extra",
        "install -D discord /app/bin/discord",
        "install -Dm644 com.discordapp.Discord.appdata.xml /app/share/appdata/com.discordapp.Discord.appdata.xml"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar xf discord.tar.gz",
            "rm discord.tar.gz",
            "mv Discord/Discord discord",
            "mv Discord/* .",
            "rmdir Discord",
            "mkdir -p export/share/applications",
            "sed -e 's/Icon=discord/Icon=com.discordapp.Discord/' -e 's|Exec=/usr/share/discord/Discord|Exec=discord|' discord.desktop > export/share/applications/com.discordapp.Discord.desktop",
            "mkdir -p export/share/icons/hicolor/256x256/apps",
            "cp discord.png export/share/icons/hicolor/256x256/apps/com.discordapp.Discord.png"
          ]
        },
        {
          "type": "script",
          "dest-filename": "discord",
          "commands": [
            "exec env TMPDIR=$XDG_CACHE_HOME /app/extra/discord \"$@\""
          ]
        },
        {
          "type": "file",
          "path": "com.discordapp.Discord.appdata.xml"
        }
      ],
      "modules": [
        {
          "name": "libcxx",
          "buildsystem": "cmake",
          "builddir": true,
          "cleanup": ["/include", "/lib/*.a"],
          "sources": [
            {
              "type": "archive",
              "url": "https://releases.llvm.org/4.0.1/libcxx-4.0.1.src.tar.xz",
              "sha256": "520a1171f272c9ff82f324d5d89accadcec9bc9f3c78de11f5575cdb99accc4c"
            }
          ]
        }
      ]
    }
  ]
}
